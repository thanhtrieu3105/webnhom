@using Web_dienthoai.Models
@model IEnumerable<ItemDonHang>

@{
    ViewBag.Title = "LichSuMuaHang";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2 class="white-text text-center">LichSuMuaHang</h2>
<body>
    <div class="">
        @foreach (var item in Model)
        {
            <hr style="border: 8px solid antiquewhite; " />
            <div>
                <div class="DonHang white-text" style="display: flex; flex-direction: row">
                    <div class="div-left" style="width:15% ;text-align:center">
                        <a @*href="@Url.Action("ChiTietDH", "NguoiDung", new { id = item.SanPham.MaSP })"*@>
                            <img class="w-75 h-100"
                                 src="~/Images/Phones/@item.HinhSP" alt="Lỗi Hình">
                        </a>
                    </div>
                    <div class="div-right" style="width:85%">
                        <h5>@item.TenSP</h5>
                        <p>x @item.SoLuong</p>
                        <p>@String.Format("{0:0,0}", item.gia) đ</p>
                    </div>

                </div>
                <hr style="color:white" />
                <div>
                    <a href="">Xem Thêm </a>
                </div>
                <hr style="color:white" />
                <div>
                    <p style="color:darkgray;margin:0;width:max-content">@item.TongSL sản phẩm</p>
                    <p style="color:red ;margin:0">Thành tiền: @String.Format("{0:0,0}", item.TongTien)đ </p>
                </div>
                <hr style="color:white" />
                <div>
                    <p style="color:lightseagreen ;margin:0">@item.Tinhtrang </p>
                </div>
                <hr style="color:white" />
                <div style="text-align:center">
                    <button type="button" style="background-color:lightgray;height:40px;width:150px;border-radius:5px">Đánh Giá</button>
                </div>

            </div>


        }
    </div>
</body>

