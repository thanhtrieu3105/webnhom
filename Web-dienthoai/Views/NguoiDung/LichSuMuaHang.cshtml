@using Web_dienthoai.Models
@model IEnumerable<ItemDonHang>

@{
    ViewBag.Title = "LichSuMuaHang";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<br />
<h4 class="white-text text-center">Lịch sử mua hàng</h4>
<h2 class="white-text">@ViewBag.thongbao</h2>
<body>
    <div class="">

        @foreach (var item in Model)
        {
            <hr style="border: 8px solid antiquewhite; " />
            <h6 class="white-text">Đơn hàng số :@item.MaDH</h6> <br />

            <div>
                <div class="DonHang white-text" style="display: flex; flex-direction: row">
                    <div class="div-left" style="width:15% ;text-align:center">
                        <img class="w-75 h-100" src="~/Images/Phones/@item.HinhSP" alt="Lỗi Hình">
                    </div>
                    <div class="div-right" style="width:85%">
                        <h5>@item.TenSP</h5>
                        <p>x @item.SoLuong</p>
                        <p>@String.Format("{0:0,0}", item.gia) đ</p>
                    </div>

                </div>
                <hr style="color:white" />
                <div>
                    <a href=" @Url.Action("ChiTietDonHang", "NguoiDung", new { id = item.MaDH }) ">Xem Thêm </a>
                </div>
                <hr style="color:white" />
                <div>
                    <p style="color:darkgray;margin:0;width:max-content">@item.TongSL sản phẩm</p>
                    <p style="color:red ;margin:0">Thành tiền: @String.Format("{0:0,0}", item.TongTien)đ </p>
                </div>
                <hr style="color:white" />
                <div>
                    <p style="color:lightseagreen ;margin:0">@item.Tinhtrang </p>
                </div>
                <hr style="color:white" />

            </div>
            <div style="text-align:center;padding-bottom:30px">@Html.ActionLink("Hủy", "HuyDon", "NguoiDung", new { MaDH = item.MaDH }, new { @class = "btn btn-danger" })</div>

        }
    </div>
</body>

