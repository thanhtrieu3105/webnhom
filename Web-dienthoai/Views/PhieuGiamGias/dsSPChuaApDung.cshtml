
@{
    ViewBag.Title = "dsSPChuaApDung";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = int.Parse(ViewBag.id.ToString());
}


<div style="margin:30px">
    <h4 style="text-align:center">Danh sách chưa áp dụng mã :@ViewBag.tenmgg</h4>
    @Html.ActionLink("đã áp dụng", "dsSPApDung", new { id = id })
    <table class="table table-hover  ">
        <thead>
            <tr>
                <th>Mã Sản Phẩm</th>
                <th>Tên Sản Phẩm</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSP</td>
                    <td>@item.TenSP</td>
                    <td>
                        @Html.ActionLink("Áp dụng", "ApDung", new { MaSP = item.MaSP, id = id })
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>


