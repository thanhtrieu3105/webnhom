@model IEnumerable<Web_dienthoai.Models.PhieuGiamGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Phiếu Giảm Giá </h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table  table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenGiamGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.chietkhau)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenGiamGia)
        </td>
        <td>

            @String.Format("{0:F1}",   @item.chietkhau* 100)%
        </td>
        <td>
            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id=item.MaGG }) |
            @Html.ActionLink("Áp dụng", "dsSPApDung", new { id=item.MaGG }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaGG })
        </td>
    </tr>
}

</table>
