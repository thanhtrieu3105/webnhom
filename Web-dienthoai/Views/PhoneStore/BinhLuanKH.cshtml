@model Web_dienthoai.Models.BinhLuan

@{
    ViewBag.Title = "BinhLuanKH";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}





@using (Html.BeginForm("BinhLuanKH", "PhoneStore", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal w-50" style="margin:10px auto">
        <h3 style="text-align:center;font-weight:bold">Đánh giá</h3>
        <div style="display: flex; flex-direction: row;align-items:center">
            <div class="div-left" style="width:15% ;text-align:center">
                <img class="mw-100" src="~/Images/Phones/@ViewBag.hinhsp" alt="Lỗi Hình">
            </div>
            <div class="div-right " style="width:35%;margin-left:10px">
                <h5 class=" fw-bold">@ViewBag.tensp  </h5>
            </div>

        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            <textarea class="form-control" name="Chiase" id="Chiase" rows="3" placeholder="Chia sẻ cảm nhận của bạn"></textarea>
        </div>
        <div class="mb-3 ">
            @*<input type="file" id="Anh" name="Anh" aria-label="gửi ảnh thực tế">*@
            <input type="file" name="Anh" />
            @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })

        </div>
        <div class="mb-3 row" style="@ViewBag.sty">
            <div class="col-md-6">
                <label>Họ tên:</label>
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-6">
                <label>SDT:</label>
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <p >Chúng tôi cam kết sẽ bảo mật số điện thoại của bạn</p>

        <div style="text-align:center">
            <button type="submit" class="btn btn-warning align-content-center">Gửi đánh giá</button>
        </div>
    </div>
}


