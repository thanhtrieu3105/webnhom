                <a href="@Url.Action("Index", "PhieuGiamGias")" style="text-decoration:none;color:black">QUẢN LÝ PHIẾU GIẢM GIÁ</a>
            </div>


            @*   <div class="search-cart">
                <div class="search-sp">
                    <i class="fa fa-search"></i>
                </div>*@


        </div>


        <form class="form-search " onsubmit="return false;" style="display:none;">
            <div class="click-search">
                <i class="search"></i>
                <input type="text" placeholder="Tìm kiếm sản phẩm" />
                <i class="delSearch"></i>
            </div>
            <button type="submit" class="submit-search" style="display:none"></button>
            <div class="sg-search"></div>
        </form>



    </header>


    @*Image slideshow*@
    <div id="div-main">

        @RenderBody()
