<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Digital way</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header  style="background-color: #D4FAFC; ">
        @*Logo*@
        <div class="head">
            <div class="logo">
                <a href="@Url.Action("Index", "QuanLySanPham")"> <img src="~/Images/home-image.png" /></a>
                <a href="@Url.Action("Index", "QuanLySanPham")" style="text-decoration:none;color:black">QUẢN LÝ SẢN PHẨM |</a>
                <a href="@Url.Action("Index", "QuanLyDonHang")" style="text-decoration:none;color:black">QUẢN LÝ ĐƠN HÀNG |</a>
