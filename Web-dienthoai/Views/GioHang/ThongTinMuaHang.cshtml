@using Web_dienthoai.Models;
@model List<MatHangMua>
@{
    ViewBag.Title = "ThongTinMuaHang";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2 class="white-text"  style="text-align:center">Thông Tin Đặt Hàng</h2> <br />
<h4 class="white-text" style="text-align:center">Sản phẩm </h4>
<table class="table table-bordered white-text">
    <thead>
        <tr>
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Ảnh bìa</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model)
        {
            <tr>
                <td>@sp.MaSP</td>
                <td>@sp.TenSP</td>
                <td><img src="~/Images/@sp.HinhSP" style="width:100%" /></td>
                <td>@sp.SoLuong</td>
                <td>@String.Format("{0:0,0}", sp.DonGia)</td>
                <td>@String.Format("{0:0,0}", sp.ThanhTien())</td>
            </tr>
        }
        <tr style="font-weight:bold; text-align:right; color:red;">
            <td colspan="4">Tổng số lượng: @ViewBag.TongSL</td>
            <td colspan="5">Tổng tiền: @ViewBag.TongTien</td>
        </tr>
    </tbody>

</table>
<h4 class="white-text" style="text-align:center">Thông Tin Người Nhận</h4>
<div class="row white-text">
    <div class="offset-md-1 col-md-10">
        @using (Html.BeginForm("ThongTinMuaHang", "GioHang"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="name">Họ và Tên :</label>
                @Html.TextBox("TenNguoiNhan", null, new { @class = "form-control", @id = "name", required = "required" })
            </div>
            <div class="form-group">
                <label for="sdt">Số Điện Thoại:</label>
                @Html.TextBox("SDTnhan", null, new { @class = "form-control", @id = "sdt", required = "required" })
            </div>
            <div class="form-group">
                <label for="diachi">Địa Chỉ</label>
                @Html.TextBox("DiaChiNhan", null, new { @class = "form-control", @id = "diachi", required = "required" })
            </div>
            <div class="form-group">
                <h5>Hình Thức Thanh Toán</h5>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="httt" name="HTThanhToan" value="Thanh Toán Khi Nhận Hàng">
                    <label for="httt" style="padding:5px;color:black;background-color:white;font-weight:bold">Thanh Toán Khi Nhận Hàng</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="httt" name="HTThanhToan" value="Thanh Toán Chuyển Khoản">
                    <label for="httt" style="padding:5px;color:black;background-color:white;font-weight:bold">Thanh Toán Chuyển Khoản</label>
                </div>
            </div>
            <div class="form-group">
                <h5>Hình Thức Giao Hàng </h5>
                <div class="form-check">

                    <input class="form-check-input" type="radio" id="htgt" name="HTGiaohang" value="Giao Hàng Tận Nhà">
                    <label class="form-check-label" for="htgh" style="padding:5px;color:black;background-color:white;font-weight:bold">
                        Giao Hàng Tận Nhà <i style="color:red">Phí 25.000 vnd</i>
                    </label>
                </div>
            </div>
            <div style="text-align:center;padding:10px">
                <button type="submit" class="btn btn-primary">Đặt Hàng</button>
            </div>
        }

    </div>
</div>

