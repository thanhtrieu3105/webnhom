
@using Web_dienthoai.Models;
@model List<MatHangMua>

@{
    ViewBag.Title = "HienThiGioHang";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/Image.css" />

<h2 class="white-text" style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table class="table table-bordered white-text">
    <thead>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Hình ảnh</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>Chi tiết</th>
            <th>Cập nhật</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSP</td>
                <td>@item.TenSP</td>

                <td><img src="~/Images/Phones/@item.HinhSP" style="width:25%; height:25%" /></td>
                @*  <td> null </td>*@
                @using (Html.BeginForm("CapNhatMatHang", "GioHang", new { MaSP = item.MaSP }))
                {
                    <td>
                        <input type="number" min="1" value="@item.SoLuong" name="SoLuong" />
                    </td>
                    <td>@item.DonGia</td>
                    <td>@item.ThanhTien()</td>
                    <td>@Html.ActionLink("Chi tiết", "Details", "PhoneStore", new { id = item.MaSP }, new { @class = "btn btn-success" })</td>
                    <td>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </td>

                }
                <td>@Html.ActionLink("Xóa sản phẩm", "XoaMatHang", "GioHang", new { MaSP = item.MaSP }, new { @class = "btn btn-danger" })</td>
            </tr>

        }
        <tr style="font-weight:bold; text-align:right; color:red;">
            <td colspan="5">Tổng số lượng: @ViewBag.TongSL</td>
            <td colspan="1">Tổng tiền: @ViewBag.TongTien</td>
        </tr>
      
    </tbody>
</table>
<div style="text-align:center">@Html.ActionLink("ĐẶT HÀNG", "ThongTinMuaHang", null, new { @class = "btn btn-primary" })</div> 