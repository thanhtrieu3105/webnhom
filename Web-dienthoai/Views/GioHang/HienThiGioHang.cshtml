
@using Web_dienthoai.Models;
@model List<MatHangMua>

@{
    ViewBag.Title = "HienThiGioHang";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


<link rel="stylesheet" href="~/Content/Image.css" />

<h2 class="white-text" style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table class="table table-dark" >
    <thead>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Hình ảnh</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>Chi tiết</th>   
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSP</td>
                <td>@item.TenSP</td>

                <td ><img src="~/Images/Phones/@item.HinhSP" style="width:100px; height:30%" /></td>
                @*  <td> null </td>*@
                @using (Html.BeginForm("CapNhatMatHang", "GioHang", new { MaSP = item.MaSP }))
                {
            <td>
                <input style="width:100px;" type="number" min="1" value="@item.SoLuong" name="SoLuong" />
                <button type="submit" class="btn btn-success">Lưu</button>
            </td>
                    <td>@String.Format("{0:0,0}", @item.DonGia) đ</td>
                    <td>@String.Format("{0:0,0}", @item.ThanhTien()) đ</td>
                    <td>@Html.ActionLink("Chi tiết", "Details", "PhoneStore", new { id = item.MaSP }, new { @class = "btn btn-success" })</td>             

                }
                <td>@Html.ActionLink("Xóa", "XoaMatHang", "GioHang", new { MaSP = item.MaSP }, new { @class = "btn btn-danger" })</td>
            </tr>

        }
        <tr style="font-weight:bold; text-align:right; color:red;">
            <td colspan="5">Tổng số lượng: @ViewBag.TongSL</td>
            <td colspan="1">Tổng tiền:@String.Format("{0:0,0}", @ViewBag.TongTien) đ</td>
        </tr>
      
    </tbody>
</table>
<div style="text-align:center;margin:10px">@Html.ActionLink("ĐẶT HÀNG", "ThongTinMuaHang", null, new { @class = "btn btn-primary" })</div> 