@model IEnumerable<MVCbuoi4.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


<div style="margin:10px auto;width:90%">
    <h2 style="text-align:center">Thông Tin Product</h2>
    <p>
        @Html.ActionLink("Tao moi", "Create",null,new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
               Tên sản phẩm
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Giá
            </th>
            <th>
               Hình ảnh
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecriptionPro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category1.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductID },new { @class="btn btn-success"}) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

</div>



