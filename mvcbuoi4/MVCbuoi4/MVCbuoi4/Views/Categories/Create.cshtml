@model MVCbuoi4.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">TẠO MỚI CATEGORY</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
   
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*@Html.LabelFor(model => model.IDCate, htmlAttributes: new { @class = "control-label col-md-2" })*@
                Mã Category
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.NameCate, htmlAttributes: new { @class = "control-label col-md-2" })*@
                Tên Category
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin :10px auto;text-align:center">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở lại Index", "Index")
    </div>
</div>
